<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">


      <%= simple_form_for(motorbike) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :rating, inclusion: { in: [1, 2, 3, 4, 5] } %>
        </div>
        <div class="form-inputs">
          <%= f.input :description %>
        </div>
        <div class="form-action d-lg-flex d-block">
          <div class="form-actions w-100">
            <%= f.button :submit, class: 'btn-mobike'%>
          </div>
        </div>
      <% end %>
      <div style="height: 80px;"></div>
    </div>
  </div>
</div>
