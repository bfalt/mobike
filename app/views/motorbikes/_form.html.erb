      <%= simple_form_for(motorbike) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-row">
        <div class="col-md-12">
          <%= f.input :make, placeholder: "Make", label: false  %>
        </div>
        <div class="col-md-6">
          <%= f.input :model, placeholder: "Model", label: false  %>
        </div>
        <div class="col-md-6">
          <%= f.input :year, placeholder: "Year", label: false  %>
        </div>
        </div>
        <div class="form-inputs">
          <%= f.input :description, placeholder: "Description of your bike", label: false  %>
        </div>
        <div class="form-inputs">
          <%= f.input :price, placeholder: "Enter daily rate", label: false  %>
        </div>
        <div class="form-inputs">
          <%= f.input :address, placeholder: "Address", label: false  %>
        </div>
        <div class="form-inputs">
          <%= f.input :category, collection: Motorbike::CATEGORIES, label: false, include_blank: "Select category" %>
        </div>
        <div class="form-inputs text-left">
          <p><strong>Add Photos</strong></p>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
        </div>
          <div class="form-action d-lg-flex d-block">
            <div class="form-actions w-100">
              <%= f.button :submit, class: 'btn-mobike'%>
                <div>
                  <%= link_to "Go back", motorbikes_path, class: 'btn btn-mobike'%>
                </div>
              <div>
            </div>
          </div>
        </div>
      <% end %>
      <div style="height: 80px;"></div>
