<h4 style="padding: 40px; text-align: justify;"><%= @motorbikes.count %> Motorbikes</h4>
<section class="motorbikes">
  <div class="container-fluid">

    <div class="Cards">
      <div class="Cards__grid d-flex">
        <div class="col-8">
          <div class="cards">
            <% @motorbikes.each do |motorbike|  %>
             <div class="grid-item">
                 <%= render 'shared/card', motorbike: motorbike %>
                <%#= render 'shared/card', motorbike: motorbike %>
             </div>
           <% end %>
          </div>
        </div>
        <div class="col-4" id="map" style="width: 100%; height: 100vh; position: sticky; top: 0 " data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>

  </div>
</section>


<div class="col-12">
  <%= link_to "/", class: "endSearch" do %>
  <%= image_tag "mcglass.png" %>
  <% end %>
</div>

<h2>No more bike!</h2>
<h3>Try changing your filters, adjusting your dates, or exploring the map</h3>
