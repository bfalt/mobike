<section class="motorbikes">
  <div class="container-fluid">
    <h3><%= @motorbikes.count %> Motorbikes</h3>
    <div class="Cards">
      <div class="Cards__grid">
        <% @motorbikes.each do |motorbike|  %>
          <div class="grid-item">
            <h2><%= motorbike.name %></h2>
            <%#= render 'shared/card', motorbike: motorbike %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
