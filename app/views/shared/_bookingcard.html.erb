<%= link_to booking_path(booking), class: "card-product" do %>
  <div class="Card__inner">
    <div class="Card__body">
    <figure class="Card__img">
      <%= cl_image_tag booking.motorbike.photos[0].key %>
    </figure>
      <h4 class="Card__name">Booking id <%= booking.id %></h4>
      <h3 class="Card__name">start date <%= booking.start_date %></h3>
      <h3 class="Card__name">end date <%= booking.end_date %></h3>
      <h3 class="Card__name">Booking status: <%= booking.status %></h3>
    </div>
  </div>
<% end %>
