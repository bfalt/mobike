<%= link_to motorbike_path(motorbike), style: "text-decoration: none;" do %>
  <div class="p-2">
    <div class="mobike-card">
        <% if motorbike.photos[0] %>
          <%= cl_image_tag motorbike.photos[0].key, width: 300, height:300, fill: :crop, class: 'lazyload' %>
        <% end %>
      <div class="mobike-card-infos">
        <div class="text-left">
          <h2><%= motorbike.make %> , <%= motorbike.model %></h2>
          <p>Short description here!</p>
        </div>
        <h2 class="mobike-card-pricing" style="color: black;">$ <%= "#{motorbike.price}" %> / day</h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="mobike-card-user avatar-bordered" />
      </div>
    </div>
  </div>
<% end %>

